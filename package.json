{
  "name": "webext-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc:check && yarn build:esbuild",
    "build:release": "yarn test && yarn lint && yarn build && yarn:package",
    "build:esbuild": "node esbuild.js --bundle --sourcemap && bash ./copystatic.sh",
    "gen:tl-key": "node gen-tl-key.js > src/tl.ts",
    "d:webext": "web-ext run --watch-file ./dist/**/*.{js,css,html} --verbose --start-url about:debugging --start-url about:addons --start-url https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/API --start-url https://en.wikipedia.org",
    "d:noenv": "env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET yarn d",
    "d:stable-x64": "web-ext run --firefox=\"C:/Program Files/Mozilla Firefox/firefox.exe\" --config=.web-ext-config.js",
    "d:nightly:win": "web-ext run --firefox=\"C:/Program Filesc/Nightly/firefox.exe\" --config=.web-ext-config.js",
    "d:esbuild": "cross-env WATCH=1 yarn build:esbuild",
    "d:locale:en": "yarn d:webext --pref intl.locale.requested=en --pref intl.locale.matchOS=false",
    "d:nightly": "yarn web-ext run --firefox=nightly",
    "lint": "yarn tsc:check && yarn lint:webext && yarn lint:prettier && yarn lint:eslint",
    "lint:webext": "web-ext lint",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:prettier": "yarn prettier --check .",
    "package": "bash ./copystatic.sh && env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET web-ext build --overwrite-dest -i test docs yarn.lock",
    "test:watch": "jest --watch",
    "test": "jest",
    "tsc:check:no-error": "tsc --noEmit --skipLibCheck || true",
    "tsc:check": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@types/chrome": "0.0.180",
    "@types/jest": "24.0.13",
    "@types/react": "17.0.40",
    "@types/react-dom": "17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.27",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "24.8.0",
    "jest-webextension-mock": "3.5.0",
    "prettier": "2.6.0",
    "typescript": "4.6.2",
    "web-ext": "6.7.0",
    "web-ext-types": "3.2.1"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
