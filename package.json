{
  "name": "webext-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc:check && yarn webpack",
    "build:prod": "echo ! Avoid using this as it minifies ! || yarn tsc:check && cross-env NODE_ENV=production yarn webpack --mode production",
    "build:nomap": "yarn tsc:check && cross-env NOMAP=1 yarn webpack",
    "build:release": "yarn build && yarn:package",
    "build:release:minified": "yarn build:prod && yarn:package",
    "d:noenv": "env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET yarn d",
    "d:stable-x64": "yarn webpack --watch & web-ext run --firefox=\"C:/Program Files/Mozilla Firefox/firefox.exe\" --config=.web-ext-config.js",
    "d:nightly:win": "web-ext run --firefox=\"C:/Program Files/Nightly/firefox.exe\" --config=.web-ext-config.js",
    "d:webpack": "yarn webpack --watch",
    "d:webext": "web-ext run --start-url about:debugging --start-url about:addons --start-url https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/API --start-url https://en.wikipedia.org",
    "d:locale:en": "yarn d:webext --pref intl.locale.requested=en --pref intl.locale.matchOS=false",
    "d:nightly": "yarn web-ext run --firefox=nightly",
    "lint:tslint": "tslint -c tslint.json './src/**/*.ts' './src/**/*.tsx' './test/**/*.ts' './test/**/*.tsx' --project tsconfig.json",
    "lint:webext": "web-ext lint",
    "lint": "yarn lint:webext && yarn lint:tslint",
    "package": "env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET web-ext build --overwrite-dest -i test docs yarn.lock",
    "test:watch": "jest --watch",
    "test": "jest",
    "tsc:check:no-error": "tsc --noEmit --skipLibCheck || true",
    "tsc:check": "tsc --noEmit --skipLibCheck",
    "webpack": "webpack -c webpack.config.js"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@types/chrome": "0.0.86",
    "@types/jest": "24.0.13",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "babel-loader": "8.0.6",
    "cross-env": "^5.2.0",
    "css-loader": "3.4.0",
    "file-loader": "3.0.1",
    "jest": "24.8.0",
    "jest-webextension-mock": "3.5.0",
    "prettier": "1.17.1",
    "style-loader": "0.23.1",
    "ts-jest": "24.0.2",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.0.0",
    "typescript": "3.5.1",
    "web-ext": "3.0.0",
    "web-ext-types": "3.1.0",
    "webpack": "4.32.2",
    "webpack-cli": "3.3.2",
    "webpack-shell-plugin": "0.5.0"
  },
  "dependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6"
  }
}
