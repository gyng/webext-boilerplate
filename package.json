{
  "name": "webext-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET web-ext build --overwrite-dest -i test docs yarn.lock",
    "build:firefox:submit": "web-ext sign",
    "d": "env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET web-ext run --verbose --start-url about:addons --start-url about:debugging",
    "d:noenv": "web-ext run",
    "d:noenv:stable-x64": "web-ext run --verbose --firefox=\"C:/Program Files/Mozilla Firefox/firefox.exe\"",
    "lint": "env -u WEB_EXT_API_KEY -u WEB_EXT_API_SECRET web-ext lint && eslint src test",
    "lint:fix": "eslint --fix src test",
    "prettier": "echo 'Run yarn prettier:write to write.\n' && prettier --list-different src/**/*.js src/*.js test/**/*.js test/*.js",
    "prettier:write": "prettier --write src/**/*.js src/*.js test/**/*.js test/*.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.69",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^21.2.1",
    "jest-webextension-mock": "^2.1.0",
    "prettier": "^1.7.4",
    "typescript": "^2.9.2",
    "web-ext": "^2.7.0",
    "web-ext-types": "^2.1.0"
  },
  "jest": {
    "setupFiles": [
      "jest-webextension-mock"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/web-ext-artifacts/"
    ]
  },
  "dependencies": {}
}
