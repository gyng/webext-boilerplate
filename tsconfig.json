{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./bundle/",
    "paths": {
      "@src/*": ["src/*"],
      "@options/*": ["src/options/*"],
      "@content/*": ["src/content/*"],
      "@background/*": ["src/background/*"],
      "@vendor/*": ["vendor/*"],
      "@test/*": ["test/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "pretty": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/web-ext-types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist"]
}
