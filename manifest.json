{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "default_locale": "en",

  "developer": {
    "name": "Ng Guoyou",
    "url": "https://github.com/gyng/webext-boilerplate"
  },

  "homepage_url": "https://github.com/gyng/webext-boilerplate",

  "background": {
    "page": "src/background/loader.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bundle/content/index.js"]
    }
  ],

  "options_ui": {
    "browser_style": true,
    "chrome_style": true,
    "page": "src/options/options.html"
  },

  "icons": {
    "48": "icons/ic_archive_black_48px.png",
    "96": "icons/ic_archive_black_96px.png",
    "128": "icons/ic_archive_black_128px.png"
  },

  "permissions": ["<all_urls>", "activeTab", "storage"]
}
